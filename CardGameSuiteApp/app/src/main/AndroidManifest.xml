<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardgamesuiteapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardGameSuiteApp">
        <activity android:name=".DisplaySettingsActivity"></activity>
        <activity android:name=".Fives"></activity>
        <activity android:name=".DisplayFivesRulesActivity"></activity>
        <activity android:name=".Solitaire"></activity>
        <activity android:name=".DisplaySolitaireRulesActivity"></activity>
        <activity android:name=".DisplayMainPageActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>