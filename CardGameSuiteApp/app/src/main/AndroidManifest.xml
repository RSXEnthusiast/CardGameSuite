<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cardgamesuiteapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CardGameSuiteApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".gameCollectionMainMenu.DisplaySettingsActivity" />
        <activity android:name=".games.Fives" />
        <activity android:name=".gameCollectionMainMenu.DisplayFivesRulesActivity" />
        <activity android:name=".gameCollectionMainMenu.DisplayFivesSettingsActivity" />
        <activity android:name=".games.Solitaire" />
        <activity android:name=".gameCollectionMainMenu.DisplaySolitaireRulesActivity" />
        <activity android:name=".gameCollectionMainMenu.DisplaySolitaireSettingsActivity" />
        <activity android:name=".singlePlayerMenus.FivesSinglePlayerMenu" />
        <activity
            android:name=".MultiplayerConnection.MultiplayerWaitingRoomActivity"
            android:label="@string/title_activity_multiplayer_waiting_room"
            android:parentActivityName=".MultiplayerConnection.MultiplayerOrSinglePlayerMenu" />
        <activity
            android:name=".MultiplayerConnection.MultiplayerOrSinglePlayerMenu"
            android:label="@string/app_name" />
        <activity
            android:name=".gameCollectionMainMenu.DisplayMainPageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>