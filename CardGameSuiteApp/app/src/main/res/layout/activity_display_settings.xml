<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.CardGameSuiteApp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:text="Card Style"
            android:textAllCaps="true"
            android:textColor="?colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deck1" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/deck2" />

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dec3" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="100dp" >

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button2"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/regularCard"
            android:backgroundTint="?colorPrimaryVariant"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button3"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/largeCardFont"
            android:backgroundTint="?colorPrimaryVariant"/>

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button4"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="@string/funkyCard"
            android:backgroundTint="?colorPrimaryVariant"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Card Animation Speed"
            android:textAllCaps="true"
            android:textColor="?colorPrimary"
            android:textSize="25sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.slider.Slider
            android:layout_width="350dp"
            android:color="?colorPrimaryVariant"
            android:stepSize="1"
            android:valueFrom="1"
            android:valueTo="5" />
    </TableRow>

</LinearLayout>
